<div class="qr-code">
  <div class="plaintext">
    Plaintext:
    <pre><%= @secure_qr.value %></pre>
  </div>
  <div class="ciphertext">
    Ciphertext:
    <pre><%= @secure_qr.secured %></pre>
  </div>
  <div class="encoded">
    Encoded in QR code:
    <pre><%= link_to @secure_url, @secure_url %></pre>
  </div>
  <img src='http://chart.googleapis.com/chart?chs=150x150&cht=qr&chl=<%= CGI.escape @secure_url %>'/>
</div>
